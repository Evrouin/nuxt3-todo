{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": [
      "vue"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "nuxt.config.ts",
    "pages/**/*.vue",
    "components/**/*.vue",
    "layouts/**/*.vue",
    "composables/**/*.ts",
    "store/**/*.ts",
    "app.vue"
  ]
}
